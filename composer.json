{
    "name": "CarSharing",
    "description": "A MVP of the car sharing system",
    "keywords": ["api", "rest", "psr7", "carsharing"],
    "authors": [
        {
            "name": "Gustavo Afonso Novak",
            "email": "gustavoanovak@gmail.com",
            "homepage": "https://www.linkedin.com/in/novak-gustavo/"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "miladrahimi/php-jwt": "^1.1",
        "doctrine/orm": "^2.6.2",
        "symfony/yaml": "2.*"
    },
    "require-dev": {
        "phpunit/phpunit": ">=5.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "CarSharing\\": "src/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
